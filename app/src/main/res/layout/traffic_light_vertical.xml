<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/traffic_light"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="30dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/asphalt_grey"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/red_light"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/traffic_light_red"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:alpha=".3" />

            <androidx.cardview.widget.CardView
                android:id="@+id/yellow_light"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/traffic_light_yellow"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:alpha=".3" />

            <androidx.cardview.widget.CardView
                android:id="@+id/green_light"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/traffic_light_green"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:alpha="1" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>